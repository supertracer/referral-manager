<!DOCTYPE html>
<html>
  <head>
    <title>Referral Manager | <%= @page_title %></title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	   <meta charset="utf-8">
	   <meta content="width=device-width, initial-scale=1" name="viewport"/>
	   <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet"></link>
	   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	   <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>
  <body>
  	
	    <nav class="navbar navbar-inverse">
		    <div class="navbar-header">
		    	<a class="navbar-brand" href="#">Referral Manager</a>
		    </div>
		    <div>
		    	<ul class="nav navbar-nav">
		    		<li class="dropdown">
		   				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Monitor<span class="caret"></span></a>
				      		<ul class="dropdown-menu">
				        		<li><a href="#"> Analytics Overview </a></li>
				        		<li><a href="#"> Recent Activity</a></li>                        
				      		</ul>
		    		</li>
		    		<li class="dropdown">
		    			<a class="dropdown-toggle" data-toggle="dropdown" href="#">Configure<span class="caret"></span></a>
				      		<ul class="dropdown-menu">
				        		<li><%= link_to "Campaigns", campaigns_path %></li>
				        		<li><a href="#">  </a></li>                        
				      		</ul>
		    		</li>
		    		<li class="dropdown">
		    			<a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage<span class="caret"></span></a>
				      		<ul class="dropdown-menu">
				        		<li><%= link_to "Customers", customers_path %>  </li>
				        		<li><a href="#">  </a></li>                        
				      		</ul>
		    		</li>
		    	</ul>
		    </div>
	    </nav>
	
			
	   <% if !flash[:notice].blank? %>
	   		<div class="alert alert-success fade-in">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			    <%= flash[:notice] %>
	   	    </div>
	   <% end %>
			      
		<div class="container-fluid">
			<%= yield %>
		</div>
		
		<nav class="navbar navbar-inverse">
			<footer>
				<p class="copyright">&copy; Birdvision Consulting Pvt. Ltd.</p>
			</footer>
		</nav>	
		
  </body>
</html>