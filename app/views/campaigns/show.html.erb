<% @page_title = "Show Campaign" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back link') %>

<div class="campaigns show">
  <h2>Show Campaign</h2>

  <table class="campaign detail view">
    <tr>
      <th>Campaign No.</th>
      <td><%= @campaign.id %></td>
    </tr>
    <tr>
      <th>Campaign Name</th>
      <td><%= @campaign.campaign_name %></td>
    </tr>
    <tr>
      <th>Campaign Description</th>
      <td><%= @campaign.campaign_description %></td>
    </tr>
    <tr>
      <th>Start Date</th>
      <td><%= @campaign.campaign_start_date %></td>
    </tr>
    <tr>
      <th>End Date</th>
      <td><%= @campaign.campaign_end_date %></td>
    </tr>
    <tr>
      <th>Advocate Offer</th>
      <td><%= @campaign.advocate_offer_type %></td>
    </tr>
    <tr>
      <th>Advocate Min Purchase</th>
      <td><%= @campaign.advocate_min_purchase %></td>
    </tr>
    <tr>
      <th>Friend Offer</th>
      <td><%= @campaign.friend_offer_type %></td>
    </tr>
    <tr>
      <th>Friend Min Purchase</th>
      <td><%= @campaign.friend_min_purchase %></td>
    </tr>
    <tr>
      <th>Review Period</th>
      <td><%= @campaign.advocate_review_period %></td>
    </tr>
    <tr>
      <th>Referral Code Limit</th>
      <td><%= @campaign.referral_code_limit %></td>
    </tr>
    <tr>
      <th>Created at</th>
      <td><%= @campaign.created_at %></td>
    </tr>
  </table>

</div>